<h1>Listing sousgroupes</h1>

<table>
  <thead>
    <tr>
      <th>Principalgroupe</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sousgroupes.each do |sousgroupe| %>
      <tr>
        <td><%= sousgroupe.principalgroupe %></td>
        <td><%= sousgroupe.name %></td>
        <td><%= link_to 'Show', sousgroupe %></td>
        <td><%= link_to 'Edit', edit_sousgroupe_path(sousgroupe) %></td>
        <td><%= link_to 'Destroy', sousgroupe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

